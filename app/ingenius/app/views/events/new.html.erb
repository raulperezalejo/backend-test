<div class="col-xs-12">
  <h1>Nuevo Evento</h1>
</div>

<%= form_for(@event) do |f| %>
    <% if @event.errors.any? %>
        <% @event.errors.full_messages.each do |msg| %>
            <div class="alert alert-danger" role="alert">
              <span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>
              <span class="sr-only">Error:</span>
              <%=msg%>
            </div>
        <% end %>
    <% end %>

    <div class="col-xs-12 col-md-8">
      <div class="row">
        <div class="col-xs-12">
          <div class="form-group">
            <h1><%= f.text_field :title, class:"form-control input-lg" %></h1>
          </div>
          <div class="row">
            <div class="col-xs-6">
              <div class="form-group">
                <div class="row">
                  <div class="col-xs-12">
                    <%= f.collection_select(:category_id, @categories, :id, :name, { :include_blank =>"Seleccione la categorÃ­a" }, { :class => 'form-control' }) %>
                  </div>
                </div>
              </div>
            </div>
            <div class="col-xs-6">
              <div class="form-group">
                <div class="row">
                  <div class="col-xs-12">
                    <%= f.collection_select(:place_id, @places, :id, :name, { :include_blank =>'Seleccione el destino' }, { :class => 'form-control' }) %>
                  </div>
                </div>
              </div>
            </div>
          </div>
          <div class="form-group">
            <%= f.text_area :description, class:"form-control", rows:'10' %>
          </div>
        </div>
      </div>
    </div>

    <aside class="col-xs-12 col-md-4">
      <div class="row">
        <div class="col-xs-12">
          <div class="row">
            <div class="col-xs-12">
              <div class="form-group">
                <div class="input-group url">
                  <div class="input-group-addon">URL</div>
                  <%= f.text_field :image, class:"form-control" %>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </aside>

    <div class="col-xs-12">
      <div class="form-group">

        <%= f.submit class:"btn btn-success" %>

      </div>
    </div>
<% end %>