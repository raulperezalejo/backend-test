<div class="col-xs-12 col-md-8">
  <div class="col-xs-12">
    <h3>Events List</h3>
  </div>
  <div class="row grid">
    <% events.each do |event| %>
      <div class="col-sx-12 col-md-4 masonry">
        <div class="thumbnail">
          <%= link_to event_path(event) do %>
            <%= image_tag event.image %>
          <%end%>
          <div class="twitter">
            <%if !event.schedules.empty?%>
              <%=link_to "http://twitter.com/home?status=IrÃ© al #{event.title} @ #{event.schedules.first.date.strftime("%d/%m/%Y")} #{event.schedules.first.date.strftime("%H:%M")} #{event_url(event)}" do%>
                <%= image_tag 'twitter.png'%>
              <%end%>
            <!--<%#else%>-->
              <!--No dates jet-->
            <%end%>
          </div>
          <div class="caption" class="col-xs-6 col-md-12">
            <h4><%= event.title %></h4>
            <h5><%= event.place.name%> | <%= event.category.name%> </h5>
            <p>
              <%= link_to 'Details', event_path(event), class: "btn btn-success", role:"button"%>
            </p>
          </div>
        </div>
      </div>
    <% end %>
  </div>
  <div class="col-xs-12 text-center">
    <%= paginate events%>
  </div>
</div>



<aside class="col-xs-12 col-md-4">
  <div class="col-xs-12">
    <h3>Featured Events</h3>
  </div>
  <div class="row">

    <div class="col-xs-12">
      <ul class="event-list">
        <% @featureds.each do |featured| %>
          <li>
            <%= link_to event_path(featured) do %>
                <%= image_tag featured.image, class: "img-responsive" %>
            <%end%>
            <div class="info">
              <h4><%= featured.title %></h4>
              <h5><%= featured.description.truncate(25) %></h5>
              <h6>
                  <%= featured.schedules.first.date.strftime("%d/%m/%Y") %>
                  <%= featured.schedules.first.date.strftime("%H:%M") %>
              </h6>
              <%= number_to_currency(featured.schedules.first.price) %>
            </div>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
  <%= link_to new_event_path, class:"add_event" do %>
      <span class="glyphicon glyphicon-plus-sign" aria-hidden="true"></span>
  <%end%>

</aside>


<style>
  .event-list {
    list-style: none;
    margin: 0px;
    padding: 0px;
  }
  .event-list > li {
    background-color: rgb(255, 255, 255);
    box-shadow: 0px 0px 5px rgb(51, 51, 51);
    box-shadow: 0px 0px 5px rgba(51, 51, 51, 0.7);
    padding: 0px;
    margin: 0px 0px 20px;
    position: relative;
    display: block;
    width: 100%;
    height: 120px;
    padding: 0px;
  }
  .event-list > li > a > img {
    width: 100%;
    float: left;
    width: 120px;
    height: 120px;
    padding: 0px;
    margin: 0px;
  }
  .event-list > li > .info {
    padding-top: 5px;
    text-align: center;
  }


.thumbnail img
  {
    width: 100%;
  }

</style>



